<Window x:Class="PetShop.SellerHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="Seller Dashboard - Freshwater Snail Emporium" Height="450" Width="400"
        BorderBrush="LightSeaGreen" BorderThickness="10">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label x:Name="WelcomeLabel" Content="Welcome back!" Margin="20" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="DarkGreen"/>
        <Button Margin="20" FontSize="16" Width="150" Content="Add New Pet"/>
        <Button Margin="20" FontSize="16" Width="150" Content="Remove Pet"/>
        <Button Margin="20" FontSize="16" Width="150" Content="Edit Existing Pet"/>
        <Button Margin="20" FontSize="16" Width="150" Content="Change Theme"/>
    </StackPanel>
</Window>
